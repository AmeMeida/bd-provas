---
import katex from "katex";
import TexStyle from "./TexStyle.astro";

interface Props {
  formula: string;
}

const { formula } = Astro.props;

const formulas = formula.split("\n");

const htmlFrags = formulas.map((formula) => katex.renderToString(formula));
---

<TexStyle />

{
  htmlFrags.map((html) => (
    <>
      <span set:html={html} />
      <br />
    </>
  ))
}
